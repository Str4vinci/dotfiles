#!/usr/bin/env bash

# Install curl
sudo apt update
sudo apt install -y curl

# Install Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

sudo apt install -y stow tmux zsh
rm -f ~/.bashrc ~/.vimrc ~/.bash_aliases
stow -t ~ bash
stow -t ~ vim
stow -t ~ tmux
stow -t ~ zsh

chsh -s $(which zsh)

/home/linuxbrew/.linuxbrew/bin/brew install tree duckdb broot bat glow
